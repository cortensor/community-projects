# Xea Governance Oracle - Environment Variables
# Copy this file to .env and fill in the values

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Security
# ============================================================================
SECRET_KEY=changeme-in-production

# ============================================================================
# IPFS Configuration
# ============================================================================
IPFS_API_URL=http://localhost:5001

# ============================================================================
# LLM Integration (Google Gemini)
# ============================================================================
GEMINI_API_KEY=

# ============================================================================
# Cortensor Testnet Integration (Mandatory)
# ============================================================================
# CORTENSOR_ROUTER_URL=http://localhost:8080
CORTENSOR_ROUTER_URL=
CORTENSOR_API_KEY=
CORTENSOR_SESSION_ID=

# ============================================================================
# Ethereum Signing (for on-chain attestations)
# ============================================================================
SIGNER_PRIVATE_KEY=
XEA_SIGNER_ADDRESS=

# ============================================================================
# Miner Orchestration Settings
# ============================================================================
# Number of miners to query for each claim
MINER_COUNT=5

# Minimum number of miner responses required before proceeding
MINER_QUORUM=3

# Timeout in seconds for waiting on miner responses
MINER_TIMEOUT_SECONDS=12

# Maximum retry attempts for failed miner requests
MAX_RETRIES=3

# Use mock miners instead of real Cortensor network
USE_MOCK_MINERS=true

# Mock miner server URL (for local development)
MOCK_MINER_URL=http://localhost:8001

# ============================================================================
# Data Storage
# ============================================================================
DATA_DIR=/data

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
DEBUG=true
