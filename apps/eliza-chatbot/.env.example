# Copy this file to `.env` and fill in the values.
# Never commit your real `.env` file.

# --- Telegram Bot ---
TELEGRAM_BOT_TOKEN="YOUR_TELEGRAM_BOT_TOKEN_HERE"

# --- Cortensor API ---
CORTENSOR_API_URL="http://<host>:<port>/api/v1/completions"
CORTENSOR_API_KEY="YOUR_CORTENSOR_API_KEY_HERE"
CORTENSOR_SESSION_ID="7"

# --- Decoding & Generation ---
CORTENSOR_MAX_TOKENS="1000"
CORTENSOR_TEMPERATURE="0.3"
CORTENSOR_TOP_P="0.9"
CORTENSOR_TOP_K="40"
CORTENSOR_N="1"
CORTENSOR_PRESENCE_PENALTY="0.0"
CORTENSOR_FREQUENCY_PENALTY="0.0"
# Optional: comma-separated stop sequences to truncate generation
# Example: </final>,User:
CORTENSOR_STOP="</final>,User:"

# --- Guards & Features ---
# News Guard (requires NewsAPI key). Default off in example.
USE_NEWS_GUARD="false"
NEWSAPI_KEY="YOUR_NEWSAPI_KEY_HERE"

# Wikipedia/Wikidata facts guard
USE_WIKIPEDIA_GUARD="true"

# Include current date in prompts
INCLUDE_CURRENT_DATE="true"

# Timezone for local date/time answers
TIMEZONE="Asia/Jakarta"

# --- Output style & prompting ---
# Flexible output (ChatGPT-like)
FLEX_OUTPUT="true"
# Use official Llama 3.1 chat template
USE_LLAMA_CHAT_TEMPLATE="true"

# --- Session & routing ---
USE_PER_USER_SESSION="false"
USE_CHAT_ID_AS_CLIENT_REFERENCE="true"

# --- HTTP/retry tunables ---
CORTENSOR_MAX_RETRIES="2"
CORTENSOR_RETRY_BACKOFF_BASE="1.6"
CORTENSOR_RETRY_JITTER="0.25"
CORTENSOR_REQUEST_TIMEOUT="180"

# --- Language ---
DEFAULT_LANGUAGE="en"
